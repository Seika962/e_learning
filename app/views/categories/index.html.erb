<div class="main-container blurry-image"></div>
<div class="mx-auto">
    <div class="transparent">
        <h1 class="text-white my-4 border-bottom mx-5 pb-4 mb-4">Lessons</h1>
        <div class="row ml-5 pl-5">
            <% @categories.each do |category| %>
                <div class="category-box border col-md-3 mx-4 py-3 my-2">
                    <h4 class="text-white"><%= category.title %></h4>
                    <h6 class="text-white"><%= category.description %></h6>
                     <%# if there is a lesson with the combination of a spacific category and a user, show result. else start lesson %>
                    <% if Lesson.where("category_id=? AND user_id=?", category, current_user).any? %>
                        <%= link_to "Show Result", lesson_path(Lesson.find_by(category:category)), class:"btn btn2 mt-2" %>
                    <% else  %>
                        <%= link_to "Start Lesson",lessons_path(category_id: category.id) ,method: :post, class:"btn btn2 mt-2"%>
                    <% end %>
                </div>
            <% end%>
        </div>
         <div class="paginate float-right mt-4 mr-5 pr-4">
            <%= will_paginate %>
        </div>
    </div>
</div>