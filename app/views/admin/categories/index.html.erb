<div class="main-container blurry-image"></div>
    <div class="mx-auto">
        <div class="transparent">
        <h1 class="text-white pb-2">Administer Categories</h1>
        <%= link_to "New Category", new_admin_category_path, class:"btn btn2 mb-4"%>
            <table class="mx-auto text-white mb-3">
                <thead class="border-bottom"> 
                    <tr>
                        <th class="table-element">Title</th>
                        <th class="table-element">Description</th>
                        <th class="table-element">Settings</th>
                    </tr>
                </thead>
                <tbody>
                    <% @categories.each do |category| %>
                        <tr>
                            <td class="table-element"><%=link_to category.title, admin_category_words_path(category), class:"textdeco text-decoration-none" %></th>
                            <td class="table-element text-decoration-none"><%=category.description%></th>
                            <td class="table-element"><%=link_to "Edit",edit_admin_category_path(category),class:"badge badge-pill badge-light d-inline text-decoration-none" %><span>
                            /
                            </span><%= link_to "Delete", admin_category_path(category), method: :delete, class:"badge badge-pill badge-light d-inline",data: {confirm: 'Are you sure?'} %></th>
                        </tr>
                    <% end %>
                </tbody>
            </table>
            <%= link_to "Back", admin_page_admin_static_page_path(current_user), class:"text-white",style:"text-decoration:none" %>
        </div>
</div>