<div class="main-container blurry-image"></div>
<div class="mx-auto">
    <div class="transparent">
        <h1 class="text-white">Administer Users</h1>
            <table class="mx-auto text-white">
                <thead>
                    <tr>
                        <th class="table-element py-2">Name</th>
                        <th class="table-element py-2">Email</th>
                        <th class="table-element py-2">Admin</th>
                    </tr>
                </thead>
                <tbody>
                    <% @users.each do |user| %>
                        <tr>
                            <td class="table-element py-2"><%=user.name %></td>
                            <td class="table-element py-2"><%=user.email %></td>
                            <% if user.is_admin? %>
                                <td class="table-element py-2"><%= button_to "Remove", admin_user_path(user), method: :delete, class:"btn4 btn-md"%></td>
                            <% else %>
                                <td class="table-element py-2"><%= button_to "Add", admin_user_path(user), method: :patch, class:"btn4 btn-md"%></td>
                            <% end %>
                        </tr>
                    <% end%>
                </tbody>
            </table>
            <div class="paginate text-center pt-3">
                 <%= will_paginate %>
            </div>
    </div>
</div>