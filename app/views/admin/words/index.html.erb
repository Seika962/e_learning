<div class="main-container blurry-image"></div>
<div class="mx-auto">
    <div class="transparent">
        <h1 class="text-white"><%=@category.title %></h1>
        <%= link_to "New Words", new_admin_category_word_path(@category),class:"btn3 btn-md btn-block mx-auto" %>
        <table class="mx-auto text-white">
            <thead>
                <tr>
                    <th class="table-element py-2">Word</th>
                    <th class="table-element py-2">Answer</th>
                    <th class="table-element py-2">Settings</th>
                </tr>
            </thead>
            <tbody>
                <% @words.each do |word| %>
                    <tr>
                        <td class="table-element py-2"><%=word.content %></td>
                        <td class="table-element py-2"><%=word.correct_answer.content %></td>
                        <td class="table-element py-2">
                            <%= link_to "Edit", edit_admin_category_word_path(@category, word), class:"btn4 btn-md" %>
                            /
                            <%= link_to "Delete", admin_category_word_path(@category, word), method: :delete, class:"btn4 btn-md", data: {confirm: 'Are you sure?'}  %>
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
        <div class="paginate text-center border-top border-light pt-3">
            <%= will_paginate %>
        </div>

        <%= link_to "Back", admin_categories_path, class:"text-white",style:"text-decoration:none" %>
    </div>
</div>
