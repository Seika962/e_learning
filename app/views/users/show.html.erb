<div class="main-container blurry-image"></div>
<div>
    <div class="container2">
        <div class="row">
            <div class="col-lg-4 mx-auto">
                <div class="media">
                    <% if @user.picture? %>
                        <%= image_tag @user.picture.url, class:"img-thumbnail rounded-circle" %>
                    <% else %>
                        <%= image_tag("E-logo.png", class:"img-thumbnail rounded-circle") %>
                    <% end %>
                </div>
                <div class="media-body">
                    <h1 class="pb-3"><%=@user.name %></h1>
                    <div class="relations">
                        <div class="row">
                            <div class="col"><h4 class="number py-4">5</h4><p class="pb-2">Following</p></div>
                            <div class="col"><h4 class="number py-4">5</h4><p class="pb-2">Followers</p></div>
                        </div>
                    </div>
                    <%= link_to "Edit Profile", edit_user_path, class:"btn2 btn-lg btn-block mx-2" %>
                    <%= link_to "Administration", admin_page_admin_static_page_path(@user), class:"btn2 btn-lg btn-block mx-2" %>
                </div>
            </div>
            <div class="activity col-lg-7 mx-auto mt-3">
                <h1 class="pt-3 font" style="color: rgb(116, 249, 252);">Activity</h1>
            </div>
        </div>
    </div>
</div>
