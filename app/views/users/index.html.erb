<div class="main-container blurry-image"></div>
<div class="container2 px-5">
    <h1 class="text-center py-3" >Users</h1>

    <div class="paginate text-center border-top border-light pt-3">
        <%= will_paginate %>
    </div>

    <ul class="list-unstyled pt-2 row mb-5" >
        <% @users.each do |user| %>
            <li class="media py-3 col-sm-6">
                <div class="mr-3">
                    <% if user.picture? %>
                            <%= image_tag user.picture.url, class:"index-image rounded-circle" %>
                        <% else %>
                            <%= image_tag("E-logo.png", class:"index-image rounded-circle") %>
                        <% end %>
                </div>
                <div class="media-body">
                    <h5 class="pt-4 text-left"><%= link_to user.name, user_path(user), class:"index-text pl-3"%></h5>
                </div>
            </li>
        <% end %>
    </ul>
</div>