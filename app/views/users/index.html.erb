<div class="main-container blurry-image"></div>
<div class="container2 px-5">
    <h1 class="text-center pt-5 pb-4 border-bottom" >Users</h1>

    <ul class="list-unstyled pt-4 row mb-5" >
        <% @users.each do |user| %>
            <li class="media usercard py-3 col-sm-5">
                <div class="mr-3">
                    <% if user.picture? %>
                            <%= image_tag user.picture.url, class:"index-image rounded-circle" %>
                        <% else %>
                            <%= image_tag("E-logo.png", class:"index-image rounded-circle") %>
                        <% end %>
                </div>
                <div class="media-body">
                    <h5 class="pt-4 text-left"><%= link_to user.name, user_path(user), class:"index-text pl-3"%></h5>
                </div>
            </li>
        <% end %>
    </ul>
    <div class="paginate float-right">
        <%= will_paginate %>
    </div>
</div>